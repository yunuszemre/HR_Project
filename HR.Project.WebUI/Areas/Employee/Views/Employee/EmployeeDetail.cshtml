
@model UserEntity
@{
    ViewData["Title"] = "EmployeeDetail";
    Layout = "_Layout";


}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="150px" src="~/@Model.ImageURL">
                <span class="font-weight-bold">@Model.FirstName @Model.LastName</span>
                <span class="text-black-50">@Model.Email</span>
                <span> </span>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Personel Bilgileri</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Adı</label><input type="text" class="form-control" placeholder="ilk adı" asp-for="@Model.FirstName" disabled></div>
                    <div class="col-md-6"><label class="labels">İkinci Adı</label><input type="text" class="form-control" placeholder="ikinci adı" asp-for="@Model.SecondName" disabled></div>
                    <div class="col-md-6"><label class="labels">Soyadı</label><input type="text" class="form-control" placeholder="soyadı" asp-for="@Model.LastName" disabled></div>
                    <div class="col-md-6"><label class="labels">İkinci Soyadı</label><input type="text" class="form-control" placeholder="ikinci soyadı" asp-for="@Model.SecondLastName" disabled></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Telefon Numarası</label><input type="text" class="form-control" placeholder="telefon numarası" asp-for="@Model.Phone" disabled></div>
                    <div class="col-md-12"><label class="labels">Adresi</label><input type="text" class="form-control" placeholder="adresi" asp-for="@Model.Address" disabled></div>
                    <div class="col-md-12"><label class="labels">Emaili</label><input type="email" class="form-control" placeholder="email" asp-for="@Model.Email" disabled></div>
                    <div class="col-md-12"><label class="labels">Doğum Yeri</label><input type="text" class="form-control" placeholder="doğum yeri" asp-for="@Model.BirthLocation" disabled></div>
                    <div class="col-md-12"><label class="labels">Doğum Tarihi</label><input type="text" class="form-control" placeholder="doğum tarihi" asp-for="@Model.BirthDate" disabled></div>
                    <div class="col-md-12"><label class="labels">İşe Giriş Tarihi</label><input type="date" class="form-control" placeholder="işe giriş tarihi" asp-for="@Model.JobEnterDate" disabled></div>
                    <div class="col-md-12"><label class="labels">İşten Çıkış Tarihi</label><input type="date" class="form-control" placeholder="işten çıkış tarihi" asp-for="@Model.JobExitDate" disabled></div>
                    <div class="col-md-12"><label class="labels">Mesleği</label><input type="text" class="form-control" placeholder="mesleği" asp-for="@Model.Job" disabled></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Departmanı</label><input type="text" class="form-control" placeholder="departman" asp-for="@Model.Department" disabled></div>
                    <div class="col-md-6"><label class="labels">Cinsiyeti</label><input type="text" class="form-control" placeholder="cinsiyet" asp-for="@Model.Gender" disabled></div>
                </div>
            </div>
        </div>
    </div>
</div>
