
@model UserEntity
@{
    ViewData["Title"] = "Login";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-5 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div class="brand-logo">
                            <img src="~/Template/images/Logo.png">
                            <label>HR-IK İnsan Kaynakları Platformu</label>
                        </div>
                        <h4>Hoşgeldiniz!</h4>
                        <form class="pt-3">
                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                            </div>
                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="~/Template/index.html">GİRİŞ YAP</a>
                                <a href="#" class="auth-link text-black">Şifremi Unuttum!</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
<!-- plugins:js -->
<script src="~/Template/assets/vendors/js/vendor.bundle.base.js"></script>
<!-- endinject -->
